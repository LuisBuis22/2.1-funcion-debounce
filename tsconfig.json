{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmitOnError": false,
    "removeComments": true,
    "noEmit": false,
    "declaration": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*.ts", "__tests__/**/*.ts", "src/debounce.ts", "src/debounce.test.ts"]
}
